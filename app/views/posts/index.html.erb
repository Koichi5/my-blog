<div class="mb-8">
  <% if @posts.any? %>
    <div class="post-card-grid">
      <% @posts.each do |post| %>
        <%= render "post_card", post: post %>
      <% end %>
    </div>
  <% else %>
    <div class="text-center py-12">
      <p class="text-xl text-text-muted mb-4">まだ記事がありません。</p>
      <% unless user_signed_in? %>
        <p class="text-text-muted">
          <%= link_to "ログイン", new_user_session_path, class: ds_button_classes(:link) %>して記事を投稿しましょう！
        </p>
      <% end %>
    </div>
  <% end %>
</div>
