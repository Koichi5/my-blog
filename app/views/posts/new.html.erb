<% content_for :body_class, "post-new-page-layout" %>
<% content_for :body_data_controller, "post-form" %>
<% content_for :post_form_appbar do %>
  <div class="flex items-center justify-between w-full">
    <%= link_to my_posts_path, class: "post-new-appbar-back" do %>
      <span class="post-new-appbar-arrow" aria-hidden="true">←</span>
      <span class="sr-only">戻る</span>
    <% end %>
    <div class="post-new-appbar-actions">
    <label class="post-new-toggle">
      <input type="checkbox" value="1" checked data-post-form-target="draftToggle" data-action="change->post-form#toggle" />
      <span class="post-new-toggle-slider"></span>
      <span class="post-new-toggle-label">下書き</span>
    </label>
    <button type="submit" form="new_post_form" class="post-new-appbar-submit" data-post-form-target="submitBtn">投稿</button>
    </div>
  </div>
<% end %>

<div class="post-new-page">
  <%= form_with model: @post, local: true, class: "post-new-form", id: "new_post_form" do |f| %>
    <%= f.hidden_field :status, value: "draft", data: { post_form_target: "statusInput" } %>

    <div class="<%= ds_card_classes %> post-new-card">
    <% if @post.errors.any? %>
      <div id="error_explanation" class="bg-danger-bg border-l-4 border-danger p-4 text-danger-text">
        <h2 class="font-semibold mb-2"><%= pluralize(@post.errors.count, "件のエラー") %>があります:</h2>
        <ul class="list-disc list-inside">
          <% @post.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="field">
      <%= f.text_field :title, class: "post-form-title", placeholder: "タイトルを入力", autofocus: true %>
    </div>

    <div class="field" data-controller="upload" data-upload-editor-target="editor">
      <%= f.text_area :body, rows: 20, id: "post_body", data: { upload_target: "editor", controller: "textarea-autogrow", action: "input->textarea-autogrow#resize" }, class: "post-form-body font-mono text-sm", placeholder: "本文を入力（Markdown形式）。画像や動画はドラッグ&ドロップでアップロードできます。" %>
    </div>
    </div>
  <% end %>
</div>
