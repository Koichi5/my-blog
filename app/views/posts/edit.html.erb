<div class="bg-white rounded-lg shadow-md p-8">
  <h1 class="text-3xl font-bold text-gray-900 mb-6">記事編集</h1>

  <%= form_with model: @post, local: true, class: "space-y-6" do |f| %>
    <% if @post.errors.any? %>
      <div id="error_explanation" class="bg-red-50 border-l-4 border-red-400 p-4">
        <h2 class="font-semibold text-red-700 mb-2"><%= pluralize(@post.errors.count, "件のエラー") %>があります:</h2>
        <ul class="list-disc list-inside text-red-700">
          <% @post.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="field">
      <%= f.label :title, "タイトル", class: "block text-sm font-medium text-gray-700 mb-2" %>
      <%= f.text_field :title, class: "w-full max-w-2xl px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent" %>
    </div>

    <div class="field" data-controller="upload" data-upload-editor-target="editor">
      <%= f.label :body, "本文（Markdown形式）", class: "block text-sm font-medium text-gray-700 mb-2" %>
      <%= f.text_area :body, rows: 20, id: "post_body", data: { upload_target: "editor" }, class: "w-full max-w-4xl px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent font-mono text-sm" %>
      <p class="text-sm text-gray-500 mt-2">
        画像や動画をドラッグ&ドロップでアップロードできます
      </p>
    </div>

    <div class="field">
      <%= f.label :status, "ステータス", class: "block text-sm font-medium text-gray-700 mb-2" %>
      <%= f.select :status, [["下書き", "draft"], ["公開", "published"]], {}, { class: "px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent" } %>
    </div>

    <div class="actions flex space-x-4">
      <%= f.submit "更新する", class: "bg-blue-600 text-white px-6 py-2 rounded-md hover:bg-blue-700 transition-colors cursor-pointer font-medium" %>
      <%= link_to "キャンセル", @post, class: "bg-gray-200 text-gray-800 px-6 py-2 rounded-md hover:bg-gray-300 transition-colors font-medium" %>
    </div>
  <% end %>
</div>
