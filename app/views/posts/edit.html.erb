<div class="<%= ds_card_classes %>">
  <h1 class="text-3xl font-bold text-text mb-6">記事編集</h1>

  <%= form_with model: @post, local: true, class: "space-y-6" do |f| %>
    <% if @post.errors.any? %>
      <div id="error_explanation" class="bg-danger-bg border-l-4 border-danger p-4 text-danger-text">
        <h2 class="font-semibold mb-2"><%= pluralize(@post.errors.count, "件のエラー") %>があります:</h2>
        <ul class="list-disc list-inside">
          <% @post.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <%= render "shared/form_field", form: f, field_name: :title, label_text: "タイトル", input_html: f.text_field(:title, class: "#{ds_input_classes} max-w-2xl") %>

    <div class="field" data-controller="upload" data-upload-editor-target="editor">
      <%= f.label :body, "本文（Markdown形式）", class: ds_form_field_classes %>
      <%= f.text_area :body, rows: 20, id: "post_body", data: { upload_target: "editor" }, class: "#{ds_input_classes} max-w-4xl font-mono text-sm" %>
      <p class="text-sm text-text-muted mt-2">
        画像や動画をドラッグ&ドロップでアップロードできます
      </p>
    </div>

    <div class="field">
      <%= f.label :status, "ステータス", class: ds_form_field_classes %>
      <%= f.select :status, [["下書き", "draft"], ["公開", "published"]], {}, { class: ds_input_classes } %>
    </div>

    <div class="actions flex space-x-4">
      <%= f.submit "更新する", class: ds_button_classes(:primary) %>
      <%= link_to "キャンセル", @post, class: ds_button_classes(:secondary) %>
    </div>
  <% end %>
</div>
